{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ES2017",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "rootDir": "./src/",
  "include": ["src/**/*"]
}
